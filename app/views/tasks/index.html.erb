

<div class="container">
  <h1>My Tasks</h1>
  <h3><%= link_to "+ Create new task", new_path %></h3>
  <% @tasks.each do |task| %>
    <div class="card-white">
      <ul>
        <%= link_to task_path(task) do %>
          <h2><%= task.title %></h2>
        <% end %>
        <% if task.completed %>
          <li><i class="fas fa-check-square"></i></li>
        <% else %>
          <li><i class="fas fa-square"></i></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>



